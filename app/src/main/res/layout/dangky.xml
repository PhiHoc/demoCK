<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Txtdangky"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="Đăng ký"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Họ và tên:"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_sdt"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Số điện thoại:"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/ed_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:inputType="phone"
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bday"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Ngày sinh"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/ed_bday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:inputType="date"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Địa chỉ"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Giới tính"
            android:textSize="15dp" />
        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_pw"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:text="Mật khẩu:"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/ed_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_xnpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_xnpw"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Xác nhận mật khẩu:"
            android:textSize="15dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/ed_xnpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_editext"
            android:drawablePadding="15dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Đăng ký"
            android:textSize="15sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Quay lại"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>